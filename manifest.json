{
  "manifest_version": 2,

  "name": "Leviosa",
  "description": "There was a lot more to magic, as Harry quickly found out, than waving your wand and saying a few funny words.",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "experimental"
  ],

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/leaptrainer.min.js",
        "js/leap.js",
        "js/jquery.js",
        "js/magic.js",
        "js/sidebar.js",
        "js/leviosa.js",
        "js/getting-started.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],

  "web_accessible_resources": [
    "img/zuck.jpg",
    "img/leviosa-logo.png",
    "img/light.png"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "Leviosa"
  },

  "options_page": "options.html"
}
